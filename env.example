# Cost Calculation System Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=production

# Backend Configuration
PORT=3104

# Main Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=esp_tracker
DB_USER=app_user
DB_PASSWORD=your_secure_password_here

# Default Item Value Database Configuration
DEFAULT_ITEM_DB_HOST=mysql_default
DEFAULT_ITEM_DB_PORT=3306
DEFAULT_ITEM_DB_NAME=default_itemvalue
DEFAULT_ITEM_DB_USER=app_user
DEFAULT_ITEM_DB_PASSWORD=your_secure_password_here

# MySQL Root Password (for Docker containers)
MYSQL_ROOT_PASSWORD=root_secure_password_here

# CORS Configuration
CORS_ORIGIN=http://localhost,https://yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Google Sheets API Configuration (if using Google Sheets integration)
GOOGLE_SHEETS_CLIENT_ID=your_google_client_id
GOOGLE_SHEETS_CLIENT_SECRET=your_google_client_secret
GOOGLE_SHEETS_REDIRECT_URI=your_redirect_uri
GOOGLE_SHEETS_REFRESH_TOKEN=your_refresh_token

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/cost-calculation.log

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL Configuration (for production with custom domain)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
DOMAIN_NAME=yourdomain.com
